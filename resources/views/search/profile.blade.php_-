    <script>


        $('.av-btn').click(function (){
            $('#calendar').html('');

            let inst_id = $(this).attr('data-id');
            $('#availability_modal').modal('show');

            jQuery.ajax({
                url: '{{ url('load_events') }}',
                type: 'POST',
                data: {
                    type: 'check_availability',
                    id: inst_id,
                },
                success: function(response) {
                    myCalendar(response);
                }
            });
        });


       function myCalendar(events_ar){

          let ev = events_ar;

           var today = moment().format("YYYY-MM-DD");
               var calendarEl = document.getElementById('calendar');
               var calendar = new FullCalendar.Calendar(calendarEl, {
                   plugins: [ 'timeGrid' ],
                   header: {
                       left: 'prev,next today',
                       center: 'title',
                   },
                   initialView: 'timeGridWeek',
                   defaultDate: today,
                   editable: false,
                   navLinks: false, // can click day/week names to navigate views
                   eventLimit: true, // allow "more" link when too many events
                   events:ev,
               });

               calendar.render();

       }

        function show_inf(id){
            $('.intl_conv, .your_car, .logbook, .driving_test').hide();
            $('.'+id).show();
            $('#info_modal').modal('show');
        }

        $(document).ready(function (){

            var owl = $('.owl-carousel');
            owl.owlCarousel({
                margin: 10,
                nav: true,
                loop: false,
                autoWidth:true,
                items:10
            })

            $('#searchForm').submit(function (){

                $('.fa-spinner').removeClass('hidden');
                var data = new FormData(this);
                data.append("search_type", 1);

                $.ajax({
                    url: "{{Route('search')}}",
                    data: data,
                    contentType: false,
                    processData: false,
                    type: 'POST',
                    success: function (res) {

                        if(res.success == true){
                            $('.total_inst').html(res.total);
                            $('.area').text(res.title);
                            $('#load_instructors').html(res.view);
                            $('#search_modal').modal('show');

                        }else if(res.success == false){
                            swal('oops!', res.message, 'warning');

                        }
                        $('.fa-spinner').addClass('hidden');
                    },
                    error: function () {
                        $('.fa-spinner').addClass('hidden');
                    }
                });
                return false;
            });
        })
    </script>
